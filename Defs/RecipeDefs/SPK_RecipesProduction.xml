<Defs>

<!-- Industrial recipes -->

	<RecipeDef>
		<defName>SPK_MakeSynthread</defName>
		<recipeUsers>
			<li>FabricationBench</li>
		</recipeUsers>
		<label>Make synthread</label>
		<description>Weave synthread by working cloth into a complex lattice molecular structure.</description>
		<jobString>Making synthread.</jobString>
		<workAmount>3000</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<researchPrerequisite>SPK_MakeSynthread_Research</researchPrerequisite>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Cloth</li>
					</thingDefs>
				</filter>
				<count>30</count>
			</li>
		</ingredients>
		<products>
			<Synthread>10</Synthread>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Cloth</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
				<Crafting>8</Crafting>
		</skillRequirements>		
		<workSkill>Crafting</workSkill>
	</RecipeDef>

